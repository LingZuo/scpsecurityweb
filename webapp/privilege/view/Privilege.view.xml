<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:commons="sap.ui.commons" xmlns:cfb="sap.security.core.control"
	xmlns:fb="sap.ui.comp.filterbar" controllerName="sap.security.privilege.controller.Privilege" displayBlock="true">
	<Page id="idRolePrivilegeManagementPage" showHeader="false" title="{i18n>appPrivilegeTitle}" class="pageDesktop">
		<content>
			<l:VerticalLayout width="100%">
				<cfb:FilterBar id="idFilterBar" header="{i18n>filterHeader}" search="onhandleSearch" showGoOnFB="" showFilterConfiguration="false"
					filterBarExpanded="false" reset="onHandleResetFB">
					<cfb:filterItems>
						<fb:FilterItem name="RoleName" label="{i18n>rolename}:">
							<fb:control>
								<Input placeholder="{i18n>searchPlaceHolder}"/>
							</fb:control>
						</fb:FilterItem>
					</cfb:filterItems>
				</cfb:FilterBar>
			</l:VerticalLayout>
			<l:VerticalLayout>
				<table:TreeTable id="idRolePrivilegeTable" selectionMode="MultiToggle" rowSelectionChange="onHandleRowSelectionChange"
					toggleOpenState="onHandlerToggelOpenState" enableSelectAll="false" class="sapUiMediumMargin" visibleRowCount="12"
					rows="{path:'rolePrivilege>/', parameters:{arrayNames:['privilegeSet']}}" ariaLabelledBy="title">
					<table:toolbar>
						<Toolbar>
							<Title id="idRolePrivilegeTableTitle" text="{i18n>items}"/>
						</Toolbar>
					</table:toolbar>
					<table:columns>
						<table:Column>
							<Label text="{i18n>rolePrivilegeName}"/>
							<table:template>
								<HBox>
									<Link text="{rolePrivilege>name}" press="onNavToDetail" visible="{rolePrivilege>isLink}" wrapping="false"/>
									<Text text="{rolePrivilege>name}" visible="{path:'rolePrivilege>isLink', formatter:'.isTextVisible'}" wrapping="false"/>
								</HBox>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="{i18n>rolePrivilegeDescription}"/>
							<table:template>
								<Text text="{rolePrivilege>description}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column hAlign="End">
							<Label text="{i18n>rolePrivilegeCreatedOn}"/>
							<table:template>
								<Text text="{rolePrivilege>createdDate}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column>
							<Label text="{i18n>rolePrivilegeCreatedBy}"/>
							<table:template>
								<Text text="{rolePrivilege>createdBy}" wrapping="false"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:footer visible="false">
						<HBox justifyContent="Center" class="PaginatorText">
							<commons:Paginator id="idPaginator" page="onHandlePage"/>
						</HBox>
					</table:footer>
				</table:TreeTable>
			</l:VerticalLayout>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>create}" press="onOpenCreateDialog" visible="{ButtonStateModel>/CreateVisible}"/>
				<Button text="{i18n>edit}" press="onOpenEditDialog" enabled="{ButtonStateModel>/CanEdit}" visible="{ButtonStateModel>/EditVisible}"/>
				<Button text="{i18n>delete}" press="onHandleDelete" enabled="{ButtonStateModel>/CanDelete}" visible="{ButtonStateModel>/DeleteVisible}"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>