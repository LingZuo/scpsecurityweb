<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover title="" showHeader="false" class="sapUiContentPadding" placement="Bottom">
		<content>
			<VBox class="addUsersPopover">
				<HBox>
					<Button icon="sap-icon://add" press="onHandleAdd" tooltip="{i18n>addUser}" text="{i18n>addUser}"/>
				</HBox>
				<HBox>
					<Button icon="sap-icon://upload" tooltip="{i18n>uploadUsers}" text="{i18n>uploadUsers}" press="onHandleUpload" enabled="false"/>
				</HBox>
			</VBox>
		</content>
	</Popover>
</core:FragmentDefinition>